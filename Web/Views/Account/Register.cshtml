@model Api.Models.RegisterRequest
@{
    ViewData["Title"] = "Зарегистрироваться";
}

<h1 class="row justify-content-center">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-5">
        <form method = "post" asp-controller = "Account" asp-action = "Register"> 
            <h3 class="row justify-content-center">Создайте учетную запись</h3>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="FIO" class="form-control" autocomplete="name" aria-required="true" />
                <label asp-for="FIO"></label>
                <span asp-validation-for="FIO" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Phone" class="form-control" maxlength="11" autocomplete="username" aria-required="true" />
                <label asp-for="Phone"></label>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            
            <div class="form-floating">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-floating">
                <input asp-for="Password" class="form-control" maxlength="20" autocomplete="new-password" aria-required="true" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="PasswordConfirm" class="form-control" maxlength="20" autocomplete="new-password" aria-required="true" />
                <label asp-for="PasswordConfirm"></label>
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" value="Register" class="w-100 btn btn-lg btn-primary">Зарегистрироваться</button>
        </form>
    </div>
</div>
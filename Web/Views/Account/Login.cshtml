@model Api.Models.LoginRequest

@{
    ViewData["Title"] = "Войти";
}

<h1 class="row justify-content-center">@ViewData["Title"]</h1>
<div class="row justify-content-center">
    <div class="col-md-5">
        <section>
            <form id="account" method="post" asp-controller = "Account" asp-action = "Login">
                <h4 class="row justify-content-center">Используйте учетную запись для входа.</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Phone" class="form-control" maxlength="11" autocomplete="username" aria-required="true" />
                    <label asp-for="Phone" class="form-label"></label> 
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" maxlength="20" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Password" class="form-label"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Войти</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
